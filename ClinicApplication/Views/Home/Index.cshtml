@{
    ViewData["Title"] = "Welcome Page";
}

<div class="container text-center my-5">
    <div class="mb-4">
        <!-- Optional: Add a background image or color -->
        <div class="p-5 bg-light rounded shadow-sm">
            <h1 class="display-4 fw-bold">Welcome to Basa Gaspar Web Application</h1>
            <p class="lead">Your go-to solution for seamless management and tracking of patient payments and procedures.</p>
            <p>Explore the features and tools designed to streamline your workflow and enhance efficiency.</p>
            <a href="/PatientPayments" class="btn btn-primary btn-lg">Get Started</a>
        </div>
    </div>
    <!-- Optional: Add an insight or feature highlights section -->
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Comprehensive Tracking</h5>
                    <p class="card-text">Keep track of all patient payments and transactions in one place. Monitor and manage your records with ease.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Customizable Filters</h5>
                    <p class="card-text">Filter transactions by date, payment method, or procedure type to get the insights you need quickly.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">User-Friendly Interface</h5>
                    <p class="card-text">Navigate through the application with ease. Our intuitive design ensures a smooth user experience.</p>
                </div>
            </div>
        </div>
    </div>
</div>
